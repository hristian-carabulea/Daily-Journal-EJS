<%- include('partials/header'); -%>

<h1>Home</h1>

<p><%= homeContent %></p>

<% newPosts.forEach(function(newPost) { %>
  <div class="item">
    <h1><%= newPost.title %></h1>
    <p>
      <%= newPost.content.substring(0,100) + " ..." %>
      <a href="/posts/<%=newPost.title%>">Read More</a>
    </p>
  </div>
<% }); %>

<%- include('partials/footer'); -%>